        // criando funções para uso do teclado 
        // guerreiro 2
        var p2IsFire = false;
        var _keyDown2 = function(e) {

            switch (e.keyCode) {
                case 37: // seta esquerda
                    g2.moveLeft2 = true;
                    break;

                case 39: // seta direita
                    g2.moveRight2 = true;
                    break;

                case 38: //seta para cima 
                    g2.moveUp2 = true;
                    break;

                case 40: //seta para baixo
                    g2.moveDown2 = true;
                    break;

                case 71: //G
                    if (p2IsFire == false) {
                        g1.tiro3 = true;
                        p2IsFire = true;
                        break;
                    }

                case 84: // T
                    if (p2IsFire == false) {
                        g1.tiro1 = true;
                        p2IsFire = true;
                        break;
                    }

                case 70: //F
                    if (p2IsFire == false) {
                        g1.tiro2 = true;
                        p2IsFire = true;
                        break;
                    }

                case 72: //H
                    if (p2IsFire == false) {
                        g1.tiro4 = true;
                        p2IsFire = true;
                        break;
                    }

            }
        }

        var _keyUp2 = function(e) {

            switch (e.keyCode) {
                case 37: // seta esquerda
                    g2.moveLeft2 = false;
                    break;

                case 39: // seta direita
                    g2.moveRight2 = false;
                    break;

                case 38: //seta para cima 
                    g2.moveUp2 = false;
                    break;

                case 40: //seta para baixo
                    g2.moveDown2 = false;
                    break;

                case 71: //G
                    g1.tiro3 = false;
                    p2IsFire = false;
